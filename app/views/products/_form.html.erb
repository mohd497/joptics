<%= form_for @product do |f| %>

    <%= f.label :name %>
    <%= f.text_field :name %>

    <%= f.label :description %>
    <%= f.text_area :description %>

    <%= f.label :price %>
    <%= f.number_field :price %>

    <%= f.label :status %>
    <%= select_tag(:status, options_for_select([['Enabled',1],['Disabled',0]])) %>

    <%= f.submit %>

<% end %>