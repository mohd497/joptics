<%= form_for @product, :html => { :class => "form-horzontal" } do |f| %>
    <fieldset>
      <div class="col-lg-12 form-group margin50">
        <%= f.label :name, class: "col-lg-2" %>
        <div class="col-lg-4">
          <%= f.text_field :name, class: "form-control name" %>
        </div>
      </div>

      <div class="col-lg-12 form-group margin50">
        <%= f.label :description, class: "col-lg-2" %>
        <div class="col-lg-4">
          <%= f.text_area :description, class: "form-control name" %>
        </div>
      </div>

      <div class="col-lg-12 form-group margin50">
        <%= f.label :avatar, class: "col-lg-2" %>
        <div class="col-lg-4">
          <%= f.file_field :avatar, class: "form-control name" %>
        </div>
      </div>

      <div class="col-lg-12 form-group margin50">
        <%= f.label :category, class: "col-lg-2" %>
        <div class="col-lg-4">
          <%= f.text_area :category, class: "form-control name" %>
        </div>
      </div>

      <div class="col-lg-12 form-group margin50">
        <%= f.label :subcategory, class: "col-lg-2" %>
        <div class="col-lg-4">
          <%= f.text_area :subcategory, class: "form-control name" %>
        </div>
      </div>

      <div class="col-lg-12 form-group margin50">
        <%= f.label :price, class: "col-lg-2" %>
        <div class="col-lg-4">
          <%= f.number_field :price, class: "form-control name" %>
        </div>
      </div>
      <div class="col-lg-12 form-group margin50">
        <%= f.label :status, class: "col-lg-2" %>
        <div class="col-lg-4">
          <%= f.select :status, options_for_select([['Enabled',true],['Disabled',false]]) %>
        </div>
      </div>

      <div class="col-lg-12 form-group margin50">
        <div class="col-lg-4">
          <%= f.submit "Submit", class:"btn btn-lg btn-primary btn-block custom-button" %>
        </div>
      </div>


    </fieldset>
<% end %>
