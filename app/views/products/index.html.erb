    <section class="glassesShowCase">
      <div class="container">
        <div class="clearfix titleWrapper">
          <h3 class="pull-left">Men's</h3>
          <span class="sortFilter pull-right">
                        <select class="form-control">
                            <option>Price upto High</option>
                            <option>Price upto Low</option>
                        </select>
                    </span>
          <div class="border-bg"></div>
        </div>
        <div class="row">
          <% for product in @products %>
            <div class="col-md-3">
              <div class="glassInfoWrap">
                <span class="price"><%= number_to_currency(product.price) %></span>
                <%= image_tag(product.avatar, :class => "img-responsive") %>
