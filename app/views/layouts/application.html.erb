<div class="container2" style="z-index: 1080">
  <div class="shopping-cart" style="z-index: 1080">
    <div class="shopping-cart-header">
      <i class="fa fa-shopping-cart cart-icon"></i><span class="badge"><%=@order.presciptions.count %></span>
      <div class="shopping-cart-total">
        <span class="lighter-text">Total:</span>
        <span class="main-color-text">$<%= @order.total %></span>
      </div>
    </div> <!--end shopping-cart-header -->

    <% if @order.presciptions.empty? %>

        <div class="selectLensWrap cartDTextWrap">
          <h3>No Products in the cart</h3>
        </div>

    <% else %>

        <ul class="shopping-cart-items">

          <% for pre in @order.presciptions %>

              <li class="clearfix2">
                <div>
                <%= image_tag(pre.product.avatar, class: 'shopping-img') %>
                </div>
                <div class="shopping-details">
                <span class="item-name"><%= pre.product.name %></span>
                <span class="item-price">$<%= pre.total_cost %></span>
                <span class="item-quantity">Quantity: <%= pre.qty %></span>
                </div>
              </li>

          <% end %>
        </ul>
        <%= link_to "Checkout", new_checkouts_path, method: :get, class: "button" %>
        <%= link_to "View Cart", cart_path, method: :get, class: "button-cart" %>

    <% end %>


  </div> <!--end shopping-cart -->
</div>

