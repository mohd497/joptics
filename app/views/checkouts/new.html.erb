<%= form_for @address, :url => url_for(:controller => 'checkouts', :action => 'create'),
             :html => { :class => "form-horzontal" } do |f| %>
    <fieldset>

      <div class="col-lg-12 form-group margin50">
        <%= f.label :address, class: "col-lg-2" %>
        <div class="col-lg-4">
          <%= f.text_area :address, class: "form-control name" %>
        </div>
      </div>

      <div class="col-lg-12 form-group margin50">
        <%= f.label :phone_number, class: "col-lg-2" %>
        <div class="col-lg-4">
          <%= f.text_field :phone_number, class: "form-control name" %>
        </div>
      </div>
      <%= f.hidden_field :customer_id, value: current_customer.id %>


      <div class="col-lg-12 form-group margin50">
        <div class="col-lg-4">
          <%= f.submit "Submit", class:"btn btn-lg btn-primary btn-block custom-button" %>
        </div>
      </div>


    </fieldset>
<% end %>
